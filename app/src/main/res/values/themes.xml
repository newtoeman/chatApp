<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ChatApp" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <!-- 1. 启动屏背景色（替换成你想要的颜色） -->
        <item name="windowSplashScreenBackground">@color/black</item>
        <!-- 2. 启动屏图标（替换成你的应用图标/自定义Drawable） -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/default_avatar</item>
        <!-- 3. 图标动画时长（可选，单位ms） -->
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.ChatApp</item>
    </style>
</resources>